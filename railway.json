{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/web && rm -rf node_modules && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/web && PORT=${PORT:-8080} node .next/standalone/apps/web/server.js",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
