{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/web && rm -rf .next node_modules && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/web && npm run start:prod",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
