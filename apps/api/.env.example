# API Service Environment Variables
# Copy this file to .env.local and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Atlas Database
# IMPORTANT: @ symbol in password must be URL-encoded as %40
# Example: mongodb+srv://username:Pass%40word@cluster.mongodb.net/code-runner
# Railway: Set this in Railway dashboard environment variables
MONGODB_URI=mongodb://localhost:27017/code-runner

# Redis Configuration
# Local development: localhost
# Railway: Railway will inject REDIS_URL automatically via Redis plugin
# If REDIS_URL is present, it takes precedence over these values
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
# IMPORTANT: Generate a strong secret for production!
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Railway: Set this in Railway dashboard as a secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# CORS Configuration
# Comma-separated list of allowed origins
# Local: http://localhost:3000
# Production: https://your-web-app.up.railway.app
# Railway: Update this with your deployed web app URL
CORS_ORIGIN=http://localhost:3000
